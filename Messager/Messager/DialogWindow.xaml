<Page x:Class="Messager.DialogWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Messager"
      mc:Ignorable="d"
      Title="DialogWindow"
      Background="White">
    <Grid>
        <Border x:Name="Help"  Width="396.8" Height="700" BorderBrush="#FF000000" BorderThickness="0,0,0,0" CornerRadius="8,8,8,8" Canvas.ZIndex="2" Visibility="Hidden">
            <Frame x:Name="Options"  Width="396.8" Height="700" Canvas.ZIndex="2"/>
        </Border>
        <Canvas x:Name="Canvas" Width="1600" HorizontalAlignment="Right" Background="Black" Opacity="0.6" Visibility="Hidden" Canvas.ZIndex="1"></Canvas>
        <Frame x:Name="BodyFrame" Width="1345" HorizontalAlignment="Right" NavigationUIVisibility="Hidden" Source="Message.xaml" BorderThickness="0.2" BorderBrush="DarkGray"></Frame>
        <Frame x:Name="MenuFrame" Width="258" HorizontalAlignment="Left" NavigationUIVisibility="Hidden" Source="AllDialog.xaml" BorderThickness="0.2" BorderBrush="DarkGray"></Frame>
    </Grid>
</Page>
